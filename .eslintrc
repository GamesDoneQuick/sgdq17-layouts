{
	"extends": "xo/esnext",
	"rules": {
		"new-cap": [2, {
			"capIsNewExceptions": [
				"Polymer",
				"Polymer.GestureEventListeners",
				"nodecg.Replicant"
			]
		}],
		"require-jsdoc": ["warn", {
			"require": {
				"FunctionDeclaration": true,
				"MethodDefinition": true,
				"ClassDeclaration": true
			}
		}],
		"valid-jsdoc": ["error"],
		"capitalized-comments": [0]
	},
	"plugins": [
		"html"
	]
}
